                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="{x:Bind EmoteImage}" Width="24" Height="24" Margin="0,0,5,0"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind Username}" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->

